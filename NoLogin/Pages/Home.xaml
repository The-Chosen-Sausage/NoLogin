<Page x:Class="NoLogin.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NoLogin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home"
       xmlns:ui="http://schemas.modernwpf.com/2019"
       >

    <Grid>
        <Grid.Resources>
            
        </Grid.Resources>
        <Border Padding="50 20">
            <ui:SimpleStackPanel>
                
                <Button Padding="15 10" Content="Explorer"       Margin="10" Click="LaunchExploer" Background="#429ce3" Foreground="White" Width="180"/>
                <Button Padding="15 10" Content="Command Prompt" Margin="10" Click="CMD"           Background="#429ce3" Foreground="White" Width="180"/>
                <Button Padding="15 10" Content="Start Menu"     Margin="10" Click="StartMenu"     Background="#429ce3" Foreground="White" Width="180"/>
                <Button Padding="15 10" Content="Task Manager"   Margin="10" Click="TaskMgr"       Background="#429ce3" Foreground="White" Width="180"/>
            </ui:SimpleStackPanel>


        </Border>
    </Grid>
</Page>
